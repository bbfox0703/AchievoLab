{
  // Serilog Logging Configuration
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Debug", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%LOCALAPPDATA%/AchievoLab/logs/myowngames-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },

  // Steam Web API Rate Limiting Configuration
  // Controls how frequently the application can call Steam APIs to prevent rate limiting (HTTP 429)
  "RateLimiter": {
    // Maximum number of general API calls allowed per minute (default: 30)
    "MaxCallsPerMinute": 30,

    // Minimum random delay added between requests in seconds to avoid patterns (default: 1.5)
    "JitterMinSeconds": 1.5,

    // Maximum random delay added between requests in seconds (default: 3.0)
    "JitterMaxSeconds": 3.0,

    // Maximum number of Steam-specific API calls per minute - more conservative (default: 12)
    "SteamMaxCallsPerMinute": 12,

    // Minimum jitter for Steam API calls in seconds (default: 5.5)
    "SteamJitterMinSeconds": 5.5,

    // Maximum jitter for Steam API calls in seconds (default: 8.0)
    "SteamJitterMaxSeconds": 8.0
  },

  // Image Download and Caching Configuration
  // Controls how game cover images are downloaded and cached locally
  "ImageCaching": {
    // Maximum number of images to download simultaneously across all sources (default: 10)
    "MaxConcurrentDownloads": 10,

    // Maximum concurrent downloads per CDN domain to avoid overwhelming servers (default: 4)
    "MaxConcurrentPerDomain": 4,

    // How long to keep cached images before re-downloading, in days (default: 30)
    "CacheDurationDays": 30,

    // Days to wait before retrying failed English image downloads (default: 15)
    "FailureTrackingDaysEnglish": 15,

    // Days to wait before retrying failed non-English image downloads (default: 7)
    "FailureTrackingDaysOtherLanguages": 7,

    // Minutes to block a CDN after receiving rate limit errors (429/403) (default: 5)
    "CdnBlockDurationMinutes": 5
  },

  // HTTP Client Configuration
  // General settings for all HTTP requests
  "HttpClient": {
    // Timeout for HTTP requests in seconds before giving up (default: 30)
    "TimeoutSeconds": 30
  },

  // User Interface Configuration
  "UI": {
    // Delay in milliseconds before triggering search while typing (prevents lag) (default: 300)
    "SearchDebounceDelayMs": 300
  }
}
